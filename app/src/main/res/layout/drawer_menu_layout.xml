<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp">


        <com.dps_kaimur.utils.CircleImageView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_pic"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/txt_white"
            app:civ_border_width="3dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:gravity="center"
            android:text="Karun Kumar"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_profile_name"
            android:gravity="center"
            android:text="Reg No. 2155255"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/drawer_header"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_option_1"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_1" />

        <View
            android:id="@+id/view_id_1"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_2"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_2" />

        <View
            android:id="@+id/view_id_2"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_3"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_3" />

        <View
            android:id="@+id/view_id_3"
            style="@style/side_view_custom_style" />

        <LinearLayout
            android:id="@+id/noti_relative_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_option_4"
                style="@style/side_txt_custom_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_option_4"
                android:visibility="visible"
                />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_noti_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_notification"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/txt_white"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>


        <View
            android:id="@+id/view_id_4"
            style="@style/side_view_custom_style" />


        <TextView
            android:id="@+id/txt_option_5"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_5" />

        <View
            android:id="@+id/view_id_5"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_6"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_6" />

        <View
            android:id="@+id/view_id_6"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_7"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_7" />

        <View
            android:id="@+id/view_id_7"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_8"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_8" />

        <View
            android:id="@+id/view_id_8"
            style="@style/side_view_custom_style" />

        <TextView
            android:id="@+id/txt_option_9"
            style="@style/side_txt_custom_style"
            android:text="@string/title_option_9" />

        <View
            android:id="@+id/view_id_9"
            style="@style/side_view_custom_style" />


    </LinearLayout>
</RelativeLayout>